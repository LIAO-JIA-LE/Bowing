@model s1411038021_NetFinal.Models.News

@{
    ViewBag.Title = "EditNews";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}
<style>
    .editnew-content {
        display: flex;
        flex-direction: column;
        align-items:center;
        margin:20px;
    }

    .editnew {
        display: flex;
        margin:20px;
    }

    .editbtn {
        display: flex;
    }
</style>

@using (Html.BeginForm())
{
    <div class="editnew-content">
        <div class="editnew">
            @Html.TextAreaFor(Model => Model.ntitle)
            @Html.ValidationMessageFor(Model => Model.ntitle)
        </div>
        <div class="editbtn">
            <input type="submit" value="確認" class="newbtn" />
        </div>
    </div>
}

@Html.ActionLink("返回首頁", "Index", new { }, new { @class = "newbtn" })
