@model s1411038021_NetFinal.Models.Cart
<link href="~/Content/Item.css" rel="stylesheet" />

<div class="edit-content">
    @using (Html.BeginForm("EditCart", "MyCart",new {CartId = Model.CartId},FormMethod.Post))
    {
        <div class="item">
            <div class="item-img">
                <img src="@Url.Content("~/Images/ballimg/" + Html.DisplayFor(Model => Model.bfile))" alt="" id="ballimg" />
            </div>
            <div class="item-content">
                <h2>訂單資訊</h2>
                <table class="table">
                    <tr>
                        <td>@Html.DisplayNameFor(Model => Model.bname)</td>
                        <td>@Html.DisplayFor(modelItem => modelItem.bname)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.bprise)</td>
                        <td>@Html.DisplayFor(modelItem => modelItem.bprise)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.BrandName)</td>
                        <td>@Html.DisplayFor(modelItem => modelItem.BrandName)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.FlareLevel)</td>
                        <td>@Html.DisplayFor(modelItem => modelItem.FlareLevel)</td>
                    </tr>
                    <tr>
                        <td>@Html.DisplayNameFor(model => model.amount)</td>
                        <td class="black" style="font-size:18px;">
                            @Html.TextBoxFor(model => model.amount, new { type = "number" })
                            @Html.ValidationMessageFor(model => model.amount)
                        </td>
                    </tr>
                </table>
                <div class="work">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

